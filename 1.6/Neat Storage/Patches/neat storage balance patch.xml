<Patch>
<!-- REBALANCE -->
<!-- allowed items -->
    <!-- all -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="sbz_DisplayTable"]/building/fixedStorageSettings</xpath>
        <value>
            <fixedStorageSettings Inherit="False">
                <filter>
                    <disallowNotEverStorable>true</disallowNotEverStorable>
                    <categories>
                        <li>Root</li>
                    </categories>
                </filter>
            </fixedStorageSettings>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="sbz_DisplayTable"]/building/defaultStorageSettings</xpath>
        <value>
            <defaultStorageSettings Inherit="False">
                <priority>Preferred</priority>
                <filter>
                    <categories>
                        <li>Root</li>
                    </categories>
                </filter>
            </defaultStorageSettings>
        </value>
    </Operation>
    <!-- general -->
    <Operation Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[@Name="sbzDisplayShelfBase" or @Name="sbzSmallDisplayShelfBase"]</xpath>
        <value>
            <building>
                <fixedStorageSettings>
                    <filter>
                        <disallowNotEverStorable>true</disallowNotEverStorable>
                        <categories>
                            <li>Root</li>
                        </categories>
                        <disallowedCategories>
                            <li>Buildings</li>
                            <li>Chunks</li>
                            <li>Plants</li>
                            <li>Corpses</li>
                        </disallowedCategories>
                    </filter>
                </fixedStorageSettings>
                <defaultStorageSettings>
                    <priority>Preferred</priority>
                    <filter>
                        <categories>
                            <li>Root</li>
                        </categories>
                        <disallowedCategories>
                            <li>Buildings</li>
                            <li>Chunks</li>
                            <li>Plants</li>
                            <li>Corpses</li>
                        </disallowedCategories>
                    </filter>
                </defaultStorageSettings>
            </building>
        </value>
    </Operation>
    <!-- crate -->
