<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="sbz_TextileRack"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites Inherit="False">
                <li>Smithing</li>
            </researchPrerequisites>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="sbzWeaponRackBase" or defName="sbz_Drum" or defName="sbz_Safe"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites Inherit="False">
                <li>Machining</li>
            </researchPrerequisites>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="sbz_WeaponRack" or @Name="sbzCrateBase" or @Name="sbzDisplayShelfBase" or @Name="sbzSmallDisplayShelfBase"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites Inherit="False">
                <li>ComplexFurniture</li>
            </researchPrerequisites>
        </value>
    </Operation>

<!-- MEDIEVAL OVERHAUL -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Medieval Overhaul</li>
        </mods>
        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[@Name="sbzCrateBase" or @Name="sbzDisplayShelfBase" or @Name="sbzSmallDisplayShelfBase" or defName="sbz_WeaponRack"]/researchPrerequisites</xpath>
            <value>
                <researchPrerequisites>
                    <li>DankPyon_RusticStorage</li>
                </researchPrerequisites>
            </value>
        </match>
    </Operation>

<!-- VFE -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <!-- Crates -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="sbzDisplayShelfBase" or @Name="sbzSmallDisplayShelfBase"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>MF_ModernFurniture</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="sbz_Pallet" or defName="sbz_MiniPallet"]/building/maxItemsInCell</xpath>
                    <value>
                        <researchPrerequisites Inherit="False">
                            <li>MF_ModernFurniture</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <!-- Weapon Rack -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="sbz_WeaponRack"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites Inherit="False">
                            <li>MF_BasicFurniture</li>
                        </researchPrerequisites>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>