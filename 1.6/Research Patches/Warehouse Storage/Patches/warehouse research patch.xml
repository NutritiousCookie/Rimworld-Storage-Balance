<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!-- ITEMS -->
    <Operation Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="Vin_CB" or defName="Vin_CBS" or defName="Vin_DLR" or defName="Vin_GR" or defName="Vin_GRS" or defName="Vin_MR" or defName="Vin_MRS" or defName="Vin_PC" or defName="Vin_TLR" or defName="Vin_WP" or defName="Vin_WPS"]/researchPrerequisites</xpath>
            <value>
                <researchPrerequisites>
                    <li>Machining</li>
                </researchPrerequisites>
            </value>
    </Operation>
    <!-- Roller Fridge -->
    <Operation Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="Vin_FR"]/researchPrerequisites</xpath>
            <value>
                <researchPrerequisites>
                    <li>AirConditioning</li>
                </researchPrerequisites>
            </value>
    </Operation>
    
<!-- VFE -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="Vin_MR" or defName="Vin_MRS"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites Inherit="False">
                            <li>MF_ModernFurniture</li>
                        </researchPrerequisites>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>