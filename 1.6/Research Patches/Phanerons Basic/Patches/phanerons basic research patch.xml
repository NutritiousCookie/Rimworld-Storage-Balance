<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!-- REMOVE RESEARCH -->
    <!-- ITEMS -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BasicStorageSack"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites></researchPrerequisites>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BasicStorageLargeBundle"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites>
                <li>ComplexClothing</li>
            </researchPrerequisites>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BasicStorageCask"or defName="BasicStorageWoodenCrate" or defName="BasicStorageMediumCrate" or defName="BasicStorageLargeCrate" or defName="BasicStorageFoodBarrel" or defName="BasicStorageFoodCupboard" or defName="BasicStorageMealStorage"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites>
                <li>ComplexFurniture</li>
            </researchPrerequisites>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BasicStorageFuelTank"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites>
                <li>BiofuelRefining</li>
            </researchPrerequisites>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BasicStorageMeatHook"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites>
                <li>Smithing</li>
            </researchPrerequisites>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BasicStorageCargoContainer" or defName="BasicStorageIndustrialContainer" or defName="BasicStorageMetalCrate" or defName="BasicStorageWeaponRack"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites>
                <li>Machining</li>
            </researchPrerequisites>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="BasicStorageStonePot"]/researchPrerequisites</xpath>
        <value>
            <researchPrerequisites>
                <li>Stonecutting</li>
            </researchPrerequisites>
        </value>
    </Operation>

<!-- PATCHES -->
    <!-- Medieval Overhaul -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Medieval Overhaul</li>
        </mods>
        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="BasicStorageCargoContainer" or defName="BasicStorageIndustrialContainer" or defName="BasicStorageMetalCrate" or defName="BasicStoragePalletSmall" or defName="BasicStoragePalletLarge"]/researchPrerequisites</xpath>
            <value>
                <researchPrerequisites>
                    <li>DankPyon_RusticStorage</li>
                </researchPrerequisites>
            </value>
        </match>
    </Operation>

<!-- Vanilla Furniture Expanded -->
    <!-- Core -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="BasicStoragePalletSmall" or defName="BasicStoragePalletLarge"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>MF_ModernFurniture</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="BasicStorageStonePot"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>MF_BasicFurniture</li>
                        </researchPrerequisites>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
    <!-- Art -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded - Art</li>
        </mods>
        <match Class="PatchOperationReplace">
            <xpath>Defs/ThingDef[defName="BasicStorageStonePot"]/researchPrerequisites</xpath>
            <value>
                <researchPrerequisites>
                    <li>VFE_Res_Pottery</li>
                </researchPrerequisites>
            </value>
        </match>
    </Operation>

<!-- PROJECTS -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef/researchPrerequisites[li="BasicStorageNeolithicStorage"]</xpath>
        <nomatch Class="PatchOperationRemove">
            <xpath>Defs/ResearchProjectDef[defName="BasicStorageNeolithicStorage"]</xpath>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef/researchPrerequisites[li="BasicStorage"]</xpath>
        <nomatch Class="PatchOperationRemove">
            <xpath>Defs/ResearchProjectDef[defName="BasicStorage"]</xpath>
        </nomatch>
    </Operation>
</Patch>