<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- REBALANCE -->
    <!-- baskets -->
    <!--
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="ASNeolithicBasketThingBase"]/building/maxItemsInCell</xpath>
        <value>
            <maxItemsInCell>3</maxItemsInCell>
        </value>
    </Operation>
    -->
    <!-- chunk pile -->
    <!-- Can't touch this through normal means because it is generated at runtime with a custom constructor. Why??? 
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="ASNeolithicChunkStorageBase"]/costStuffCount</xpath>
        <value>
            <costStuffCount>1</costStuffCount>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="ASNeolithicChunkStorageBase"]/building/maxItemsInCell</xpath>
        <value>
            <maxItemsInCell>4</maxItemsInCell>
        </value>
    </Operation>
    -->
    <!-- hay pile -->
    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[defName="ASNeolithicHayPile"]/costList</xpath>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ASNeolithicHayPile"]/building/maxItemsInCell</xpath>
        <value>
            <maxItemsInCell>4</maxItemsInCell>
        </value>
    </Operation>
    <!-- large pot -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="ASNeolithicLargePotThingBase"]/label</xpath>
        <value>
            <label>carved pot</label>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ASNeolithicMealShelf"]/building/maxItemsInCell</xpath>
        <value>
            <maxItemsInCell>4</maxItemsInCell>
        </value>
    </Operation>
    <!-- plinths -->
    <!--
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="ASNeolithicPlinthBase"]/building/maxItemsInCell</xpath>
        <value>
            <maxItemsInCell>1</maxItemsInCell>
        </value>
    </Operation>
    -->
    <!-- textile bundle -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[@Name="ASNeolithicTextileBundleBase"]/costStuffCount</xpath>
        <value>
            <costStuffCount>2</costStuffCount>
        </value>
    </Operation>
    <!-- wood piles -->
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ASNeolithicWoodPile"]/costStuffCount</xpath>
        <value>
            <costStuffCount>1</costStuffCount>
        </value>
    </Operation>
    <Operation Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="ASNeolithicWoodPile"]/building/maxItemsInCell</xpath>
        <value>
            <maxItemsInCell>4</maxItemsInCell>
        </value>
    </Operation>

<!-- ORGANIZE -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/DesignationCategoryDef[defName="Ferny_Storage"]</xpath>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[@Name="ASNeolithicBasketThingBase" or @Name="ASNeolithicPlinthBase"]</xpath>
                    <value>
                        <designationCategory>Ferny_GeneralStorage</designationCategory>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[@Name="ASNeolithicChunkStorageBase" or defName="ASNeolithicHayPile" or @Name="ASNeolithicTextileBundleBase" or defName="ASNeolithicWoodPile"]</xpath>
                    <value>
                        <designationCategory>Ferny_ResourcesStorage</designationCategory>
                    </value>
                </li>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[@Name="ASNeolithicLargePotThingBase" or defName="ASNeolithicMealShelf"]</xpath>
                    <value>
                        <designationCategory>Ferny_FoodStorage</designationCategory>
                    </value>
                </li>
            </operations>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[@Name="ASNeolithicBasketThingBase" or @Name="ASNeolithicChunkStorageBase" or defName="ASNeolithicHayPile" or @Name="ASNeolithicLargePotThingBase" or defName="ASNeolithicMealShelf" or @Name="ASNeolithicPlinthBase" or @Name="ASNeolithicTextileBundleBase" or defName="ASNeolithicWoodPile"]</xpath>
            <value>
                <designationCategory>Furniture</designationCategory>
            </value>
        </nomatch>
    </Operation>

<!-- REMOVE DUPLICATES -->
    <!-- Phanerons -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Phaneron's Basic Storage</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[@Name="ASNeolithicBasketThingBase"]/designationCategory</xpath>
                    <value>
                        <designationCategory></designationCategory>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
    <!-- Primitive/Reel's -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Adaptive Primitive Storage</li>
            <li>Reel's Expanded Storage</li>
        </mods>
        <match Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="ASNeolithicWoodPile"]</xpath>
            <value>
                <designationCategory></designationCategory>
            </value>
        </match>
    </Operation>

<!-- RESEARCH -->

<!-- Vanilla Furniture Expanded Patches -->
    <!-- Core -->
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Furniture Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/ThingDef[defName="ASNeolithicMealShelf"]</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>MF_BasicFurniture</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <!-- Art -->
                <li Class="PatchOperationFindMod">
                    <mods>
                        <li>Vanilla Furniture Expanded - Art</li>
                    </mods>
                    <match Class="PatchOperationReplace">
                        <xpath>Defs/ThingDef[@Name="ASNeolithicItemDisplayBase"]/researchPrerequisites</xpath>
                        <value>
                            <researchPrerequisites>
                                <li>VFE_Res_ArtfulDisplay</li>
                            </researchPrerequisites>
                        </value>
                    </match>
                    <nomatch Class="PatchOperationReplace">
                        <xpath>Defs/ThingDef[@Name="ASNeolithicItemDisplayBase"]/researchPrerequisites</xpath>
                        <value>
                            <researchPrerequisites>
                                <li>MF_BasicFurniture</li>
                            </researchPrerequisites>
                        </value>
                    </nomatch>
                </li>
            </operations>
        </match>
        <nomatch Class="PatchOperationRemove">
            <xpath>Defs/ThingDef[@Name="ASNeolithicItemDisplayBase"]</xpath>
        </nomatch>
    </Operation>

<!-- REMOVE RESEARCH -->
    <!-- Items -->
    <Operation Class="PatchOperationRemove">
        <xpath>Defs/ThingDef[@Name="ASNeolithicStorageBase"]/researchPrerequisites</xpath>
    </Operation>
    <!-- Projects -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef/researchPrerequisites[li="ASNeolithicNeolithicStorage"]</xpath>
        <nomatch Class="PatchOperationRemove">
            <xpath>Defs/ResearchProjectDef[defName="ASNeolithicNeolithicStorage"]</xpath>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef/researchPrerequisites[li="ASNeolithicNeolithicItemDisplay"]</xpath>
        <nomatch Class="PatchOperationRemove">
            <xpath>Defs/ResearchProjectDef[defName="ASNeolithicNeolithicItemDisplay"]</xpath>
        </nomatch>
    </Operation>
</Patch>