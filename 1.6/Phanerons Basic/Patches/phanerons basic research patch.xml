<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!-- ITEMS -->
<!-- ResearchLevelDef -->
    <Operation Class="StorageBalance.PatchOperationStorageResearch">
        <xpath>Defs/ThingDef[defName="BasicStorageSack"]</xpath>
        <techLevel>NeolithicStorage</techLevel>
    </Operation>
    <Operation Class="StorageBalance.PatchOperationStorageResearch">
        <xpath>Defs/ThingDef[defName="BasicStorageLargeBundle" or defName="BasicStorageCask"or defName="BasicStorageWoodenCrate" or defName="BasicStorageMediumCrate" or defName="BasicStorageLargeCrate" or defName="BasicStorageFoodBarrel" or defName="BasicStorageFoodCupboard" or defName="BasicStorageMealStorage"]</xpath>
        <techLevel>MedievalStorage</techLevel>
    </Operation>
    <Operation Class="StorageBalance.PatchOperationStorageResearch">
        <xpath>Defs/ThingDef[defName="BasicStorageMeatHook"]</xpath>
        <techLevel>AdvancedMedievalStorage</techLevel>
    </Operation>
    <Operation Class="StorageBalance.PatchOperationStorageResearch">
        <xpath>Defs/ThingDef[defName="BasicStoragePalletSmall" or defName="BasicStoragePalletLarge"]</xpath>
        <techLevel>ModernStorage</techLevel>
    </Operation>
    <Operation Class="StorageBalance.PatchOperationStorageResearch">
        <xpath>Defs/ThingDef[defName="BasicStorageCargoContainer" or defName="BasicStorageIndustrialContainer" or defName="BasicStorageMetalCrate" or defName="BasicStorageWeaponRack"]</xpath>
        <techLevel>BulkIndustrialStorage</techLevel>
    </Operation>
    <Operation Class="StorageBalance.PatchOperationStorageResearch">
        <xpath>Defs/ThingDef[defName="BasicStorageStonePot"]</xpath>
        <techLevel>PotteryStorage</techLevel>
    </Operation>
    <Operation Class="StorageBalance.PatchOperationStorageResearch">
        <xpath>Defs/ThingDef[defName="BasicStorageFuelTank"]</xpath>
        <researchDefName>BiofuelRefining</researchDefName>
    </Operation>

<!-- PROJECTS -->
<!-- Remove if unused -->
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef/researchPrerequisites[li="BasicStorageNeolithicStorage"]</xpath>
        <nomatch Class="PatchOperationRemove">
            <xpath>Defs/ResearchProjectDef[defName="BasicStorageNeolithicStorage"]</xpath>
        </nomatch>
    </Operation>
    <Operation Class="PatchOperationConditional">
        <xpath>Defs/ThingDef/researchPrerequisites[li="BasicStorage"]</xpath>
        <nomatch Class="PatchOperationRemove">
            <xpath>Defs/ResearchProjectDef[defName="BasicStorage"]</xpath>
        </nomatch>
    </Operation>
</Patch>