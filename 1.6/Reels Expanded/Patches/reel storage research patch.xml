<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>ModSettings[Class="StorageBalance.StorageBalanceSettings"]/doStorageResearch</xpath>
        <nomatch Class="PatchOperationSequence">
            <operations>
            <!-- ITEMS -->
            <!-- ResearchLevelDef -->
                <li Class="StorageBalance.PatchOperationStorageResearch">
                    <xpath>Defs/ThingDef[defName="ReelStorageHayBale"]</xpath>
                    <techLevel>FarmingStorage</techLevel>
                </li>
                <li Class="StorageBalance.PatchOperationStorageResearch">
                    <xpath>Defs/ThingDef[defName="ReelStorageTanningRack"]</xpath>
                    <techLevel>NeolithicStorage</techLevel>
                </li>
                <li Class="StorageBalance.PatchOperationStorageResearch">
                    <xpath>Defs/ThingDef[defName="ReelStorageAnimalFeeder" or defName="ReelStorageNewBarrel" or defName="ReelStorageNewWoodCrate" or defName="ReelStorageNewLargeWoodCrate" or defName="ReelStorageBookshelf" or defName="ReelStorageWineRack" or defName="ReelStorageWoodChest" or defName="ReelStorageLargeWoodChest" or defName="ReelStorageWeaponRack"]</xpath>
                    <techLevel>MedievalStorage</techLevel>
                </li>
                <li Class="StorageBalance.PatchOperationStorageResearch">
                    <xpath>Defs/ThingDef[defName="ReelStorageMeatHook"]</xpath>
                    <techLevel>AdvancedMedievalStorage</techLevel>
                </li>
                <li Class="StorageBalance.PatchOperationStorageResearch">
                    <xpath>Defs/ThingDef[defName="ReelStorageNewLargeLocker" or defName="ReelNewIndustrialShelf"]</xpath>
                    <techLevel>IndustrialStorage</techLevel>
                </li>
                <li Class="StorageBalance.PatchOperationStorageResearch">
                    <xpath>Defs/ThingDef[defName="ReelStorageSkip" or defName="ReelStorageVerticalWeaponRack" or defName="ReelStorageHorizontalWeaponRack" or defName="ReelStorageMetalCrate" or defName="ReelStorageLargeMetalCrate" or defName="ReelStorageCargoContainer"]</xpath>
                    <techLevel>AdvancedIndustrialStorage</techLevel>
                </li>
                
            <!-- ResearchPrerequisites -->
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="ReelStorageNewFridge" or defName="ReelStorageNewMedicineCabinet"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>AirConditioning</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="ReelStorageBarrelPallet"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>BiofuelRefining</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="ReelStorageStonePile" or defName="ReelStorageLargeStonePile"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites>
                            <li>Stonecutting</li>
                        </researchPrerequisites>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>Defs/ThingDef[defName="ReelStorageWoodPile" or defName="ReelStorageLargeWoodPile"]/researchPrerequisites</xpath>
                    <value>
                        <researchPrerequisites Inherit="False"></researchPrerequisites>
                    </value>
                </li>


            <!-- PROJECTS -->
            <!-- Remove if unused -->
                <li Class="PatchOperationConditional">
                    <xpath>Defs/ResearchProjectDef[defName="ReelNeolithicStorage"]</xpath>
                    <match Class="PatchOperationSequence">
                        <operations>
                            <li Class="PatchOperationConditional">
                                <xpath>Defs/ThingDef/researchPrerequisites[li="ReelNeolithicStorage"]</xpath>
                                <nomatch Class="PatchOperationRemove">
                                    <xpath>Defs/ResearchProjectDef[defName="ReelNeolithicStorage"]</xpath>
                                </nomatch>
                            </li>
                            <li Class="PatchOperationConditional">
                                <xpath>Defs/ThingDef/researchPrerequisites[li="ReelMedievalStorage"]</xpath>
                                <nomatch Class="PatchOperationRemove">
                                    <xpath>Defs/ResearchProjectDef[defName="ReelMedievalStorage"]</xpath>
                                </nomatch>
                            </li>
                        </operations>
                    </match>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>Defs/ThingDef/researchPrerequisites[li="ReelIndustrialStorage"]</xpath>
                    <nomatch Class="PatchOperationRemove">
                        <xpath>Defs/ResearchProjectDef[defName="ReelIndustrialStorage"]</xpath>
                    </nomatch>
                </li>
                <li Class="PatchOperationConditional">
                    <xpath>Defs/ThingDef/researchPrerequisites[li="ReelSpacerStorage"]</xpath>
                    <nomatch Class="PatchOperationRemove">
                        <xpath>Defs/ResearchProjectDef[defName="ReelSpacerStorage"]</xpath>
                    </nomatch>
                </li>
            </operations>
        </nomatch>
    </Operation>
</Patch>